{
  "manifest_version": 2,
  "name": "Escalonamento",
  "version": "1.3",
  "author": "Manucio Segundo",
  "description": "Escalonamento de Chamados",
  "permissions": ["activeTab", "storage"],
  "browser_action": {
    "default_icon": {
      "48": "icon.png"
    },
    "default_title": "Escalonamento",
    "default_popup": "popup.html"
  },
  "commands": {
    "toggle-popup": {
      "suggested_key": {
        "default": "Ctrl+Alt+E"
      },
      "description": "Abrir popup"
    }
  },
  "icons": {
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
